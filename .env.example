# Network RPC URLs
ARBITRUM_RPC_URL=https://arb1.arbitrum.io/rpc
ARBITRUM_SEPOLIA_RPC_URL=https://sepolia-rollup.arbitrum.io/rpc/

# Deployer Private Key (for deployment)
PRIVATE_KEY=your_private_key_here

# Etherscan API Key (for contract verification)
ARBISCAN_API_KEY=your_arbiscan_api_key

# ============================================
# Bridge2 Deployment Parameters
# ============================================
# Comma-separated list of validator hot wallet addresses
HOT_ADDRESSES=0x...,0x...,0x...
# Comma-separated list of validator cold wallet addresses (must match HOT_ADDRESSES order)
COLD_ADDRESSES=0x...,0x...,0x...
# Comma-separated list of validator powers (must match addresses order)
POWERS=100,100,100
# USDC token address on Arbitrum
# For testing, deploy TestERC20 first using: npm run deploy:erc20
USDC_ADDRESS=0x...
# Dispute period in seconds (default: 86400 = 1 day)
DISPUTE_PERIOD_SECONDS=86400
# Block duration in milliseconds (default: 250ms for Arbitrum)
BLOCK_DURATION_MILLIS=250
# Number of lockers required to pause bridge (default: 3)
LOCKER_THRESHOLD=3

# ============================================
# TestERC20 Deployment Parameters (optional)
# ============================================
# Token name (default: "Test USDC")
TOKEN_NAME=Test USDC
# Token symbol (default: "TUSDC")
TOKEN_SYMBOL=TUSDC
# Token decimals (default: 6)
TOKEN_DECIMALS=6
# Initial supply to mint (default: 1000000000000 = 1,000,000 tokens with 6 decimals)
INITIAL_SUPPLY=1000000000000

# ============================================
# Contract Addresses (for verification)
# ============================================
# Deployed Bridge2 contract address (set after deployment)
BRIDGE2_ADDRESS=0x...
# Deployed TestERC20 contract address (set after deployment)
TEST_ERC20_ADDRESS=0x...
# Deployed Tx keeper contract address (set after deployment)
TX_KEEPER_ADDRESS=